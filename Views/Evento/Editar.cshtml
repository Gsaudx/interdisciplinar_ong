@model Evento
@using Ong.Models
@{
    ViewData["Title"] = "Editar Evento";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Editar Evento</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" id="id" name="id" value="@Model.EventoId" />
                        
                        <div class="form-group mb-3">
                            <label for="nome" class="control-label">Nome do Evento</label>
                            <input id="nome" name="nome" class="form-control" value="@Model.Nome" required />
                            <span class="text-danger field-validation-valid" data-valmsg-for="nome" data-valmsg-replace="true"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="descricao" class="control-label">Descrição</label>
                            <textarea id="descricao" name="descricao" class="form-control" rows="5" required>@Model.Descricao</textarea>
                            <span class="text-danger field-validation-valid" data-valmsg-for="descricao" data-valmsg-replace="true"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="data" class="control-label">Data e Hora</label>
                                    <input id="data" name="data" type="datetime-local" class="form-control" value="@Model.Data.ToString("yyyy-MM-ddTHH:mm")" required />
                                    <span class="text-danger field-validation-valid" data-valmsg-for="data" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="localizacao" class="control-label">Localização</label>
                                    <input id="localizacao" name="localizacao" class="form-control" value="@Model.Localizacao" required />
                                    <span class="text-danger field-validation-valid" data-valmsg-for="localizacao" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mt-4 d-flex justify-content-between">
                            <a asp-action="Detalhes" asp-route-id="@Model.EventoId" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
