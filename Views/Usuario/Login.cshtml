@{
    ViewData["Title"] = "Login";
}

<section class="login-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg rounded-3 border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0"><i class="fas fa-sign-in-alt me-2"></i>Acesso ao Sistema</h2>
                    </div>
                    <div class="card-body p-5">
                        <form asp-action="Login" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                            
                            <div class="form-floating mb-4">
                                <input id="email" name="email" class="form-control" type="email" placeholder="E-mail" required />
                                <label for="email" class="form-label">E-mail</label>
                                <div class="invalid-feedback">
                                    Por favor, informe um e-mail válido.
                                </div>
                            </div>
                            
                            <div class="form-floating mb-4">
                                <input id="senha" name="senha" class="form-control" type="password" placeholder="Senha" required />
                                <label for="senha" class="form-label">Senha</label>
                                <div class="invalid-feedback">
                                    A senha é obrigatória.
                                </div>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Entrar
                                </button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Voltar
                                </a>
                            </div>
                            
                            <div class="text-center mt-4">
                                <p>Não tem uma conta? <a asp-controller="Usuario" asp-action="Cadastro" class="fw-bold text-primary">Cadastre-se</a></p>
                            </div>
                        </form>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="feature-box text-center p-3">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-hand-holding-heart fa-3x text-primary"></i>
                                </div>
                                <h5>Faça Doações</h5>
                                <p class="small text-muted">Ajude ONGs com doações importantes para suas causas</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-box text-center p-3">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-users fa-3x text-primary"></i>
                                </div>
                                <h5>Voluntarie-se</h5>
                                <p class="small text-muted">Participe de eventos e contribua com seu tempo e habilidades</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-box text-center p-3">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-building fa-3x text-primary"></i>
                                </div>
                                <h5>Cadastre sua ONG</h5>
                                <p class="small text-muted">Encontre voluntários e doadores para sua organização</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        (function () {
            'use strict'
            
            var forms = document.querySelectorAll('.needs-validation')
            
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}